{% style %}
  .grid {
    display: flex;
    max-width: 900px;
    margin: 0 auto;
  }
  .campaign h2 {
    color: red;
  }
  .new-product h2 {
    color: blue;
  }
  .news h2 {
    color: green;
  }
  #box {
    display: flex;
    flex-direction: column;
    text-align: center;
    box-shadow: 2px 2px 2px 2px antiquewhite;
  }
  .grid-item {
    margin-right: 24px;
  }
  .grid-item:last-of-type {
    margin-right: 0px;
  }
{% endstyle %}


