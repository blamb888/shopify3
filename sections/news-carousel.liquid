    ]
  }
{% endschema %}

{% style %}
  .grid {
    display: flex;
    max-width: 900px;
    margin: 0 auto;
  }
  .grid-item {
    margin-right: 24px;
  }
  .grid-item:last-of-type {
    margin-right: 0px;
  }
{% endstyle %}
