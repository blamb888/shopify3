<div id="shopify-section-[id]" class="shopify-section slideshow">
  [See if anything shows up here]
  <div class="grid">
    {% for block in section.blocks %}
      <div class="grid-item">
        {% if block.type == 'block-2' %}
          <div id="box" class="new-product">
            <h2>{{block.settings.title}}</h2>
            <h3>"{{block.settings.description}}"</h3>
          </div>
        {% elsif block.type == 'block-1' %}
          <div id="box" class="campaign">
            <h2>{{block.settings.title}}</h2>
            <h3>"{{block.settings.description}}"</h3>
          </div>
        {% else block.type == 'block-3' %}
          <div id="box" class="news">
            <h2>{{block.settings.title}}</h2>
            <h3>"{{block.settings.description}}"</h3>
          </div>
        {% endif %}
    {% endfor %}
      </div>
</div>

{% schema %}
  {
    "name": "Multiple Blocks",
    "blocks": [
      {
        "type": "block-1",
        "name": "Campaign",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title",
            "default": "Campaign, New Product, or News?"
          },
          {
            "id": "description",
            "type": "textarea",
            "label": "Description",
            "default": "Tell us a little more about it."
          },
          {
            "type": "checkbox",
            "id": "featured",
            "label": "Featured",
            "default": false,
            "info": "A featured item will appear first in the carousel."
          }
        ]
