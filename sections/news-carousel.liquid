<div id="shopify-section-[id]" class="shopify-section slideshow">
  [See if anything shows up here]
  <div class="grid">
    {% for block in section.blocks %}
      <div class="grid-item">
        {% if block.type == 'block-1' %}
          <h2>{{block.settings.title}}</h2>
        {% elsif block.type == 'block-2' %}
          <h3>{{block.settings.title}}</h3>
        {% endif %}
    {% endfor %}
      </div>
</div>

{% schema %}
  {
    "name": "Multiple Blocks",
    "blocks": [
      {
        "type": "block-1",
        "name": "Campaign",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title",
            "default": "Campaign, New Product, or News?"
          },
          {
            "id": "description",
            "type": "textarea",
            "label": "Description",
            "default": "Tell us a little more about it."
          },
          {
            "type": "checkbox",
            "id": "featured",
            "label": "Featured",
            "default": false,
            "info": "A featured item will appear first in the carousel."
          }
        ]
      },
      {
        "type": "block-2",
        "name": "New Product",
        "settings": [
          {
            "id": "title",
            "type": "text",
