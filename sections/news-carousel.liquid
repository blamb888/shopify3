          },
          {
            "type": "checkbox",
            "id": "featured",
            "label": "Featured",
            "default": false,
            "info": "A featured item will appear first in the carousel."
          }
        ]
      },
      {
        "type": "block-3",
        "name": "News",
        "settings": [
          {
            "id": "title",
